<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f0"
    android:orientation="vertical"
    tools:context="dental.mahmoud.adnan.dental.Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/ic_launcher"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/Register_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/editext_style2"
                    android:elevation="5dp"
                    android:ems="10"
                    android:hint="E-mail"
                    android:inputType="textEmailSubject"
                    android:padding="10dp"
                    android:textColor="#456173"
                    android:textColorHint="#456173"
                    tools:ignore="HardcodedText,TextFields,UnusedAttribute" />

                <EditText
                    android:id="@+id/Register_username"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/editext_style2"
                    android:elevation="5dp"
                    android:ems="10"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="#456173"
                    android:textColorHint="#456173"
                    tools:ignore="HardcodedText,UnusedAttribute" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Register_password"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/editext_style2"
                        android:elevation="5dp"
                        android:ems="10"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="#456173"
                        android:textColorHint="#456173"
                        tools:ignore="HardcodedText,LabelFor,RtlHardcoded,UnusedAttribute" />

                    <EditText
                        android:id="@+id/Register_retypePass"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/editext_style2"
                        android:elevation="5dp"
                        android:ems="10"
                        android:hint="Re-type password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="#456173"
                        android:textColorHint="#456173"
                        tools:ignore="HardcodedText,LabelFor,RtlHardcoded,UnusedAttribute" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessLeaf">

                    <EditText
                        android:id="@+id/Register_age"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/editext_style2"
                        android:elevation="5dp"
                        android:ems="10"
                        android:hint="Age"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="#456173"
                        android:textColorHint="#456173"
                        tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />

                    <EditText
                        android:id="@+id/Register_tele"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/editext_style2"
                        android:elevation="5dp"
                        android:ems="10"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:padding="10dp"
                        android:textColor="#456173"
                        android:textColorHint="#456173"
                        tools:ignore="HardcodedText,RtlHardcoded,UnusedAttribute" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <Button
                    android:id="@+id/Register_btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_shape"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:onClick="register"
                    android:text="Register"
                    android:textColor="#fbfbfb"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText,UnusedAttribute" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>